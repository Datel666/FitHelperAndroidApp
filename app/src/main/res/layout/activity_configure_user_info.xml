<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context=".views.helper.ConfigureUserInfoActivity">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:text="Выберите свой пол"
        android:textColor="#000"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        />

    <LinearLayout

        android:layout_marginHorizontal="25dp"
        android:layout_marginBottom="20dp"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/male"
            android:layout_gravity="right"
            android:layout_width="150dp"
            android:background="@color/malefemalenonfocused"
            android:layout_height="150dp">

            <ImageView
                android:layout_width="170px"
                android:layout_height="170px"
                android:src="@drawable/male"
                android:layout_centerInParent="true">
            </ImageView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/colorWhite"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="10dp"
                android:textAlignment="center"
                android:text="Мужчина"/>

        </RelativeLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            />

        <RelativeLayout
            android:id="@+id/female"

            android:layout_width="150dp"
            android:background="@color/malefemalenonfocused"
            android:layout_height="150dp">

            <ImageView
                android:layout_width="170px"
                android:layout_height="170px"
                android:src="@drawable/female"
                android:layout_centerInParent="true">
            </ImageView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/colorWhite"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="10dp"
                android:textAlignment="center"
                android:text="Женщина"/>

        </RelativeLayout>

    </LinearLayout>




    <com.google.android.material.textfield.TextInputLayout
        app:counterEnabled="true"
        app:counterMaxLength="3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:errorEnabled="true">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/ageEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="50dp"
            android:layout_marginVertical="10dp"
            android:paddingHorizontal="15dp"
            android:hint="Введите ваш возраст в годах"
            android:maxLength="3"

            android:inputType="numberDecimal"

            />

    </com.google.android.material.textfield.TextInputLayout>





    <com.google.android.material.textfield.TextInputLayout
        app:counterEnabled="true"
        app:counterMaxLength="3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:errorEnabled="true">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/heightEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="50dp"
            android:layout_marginVertical="10dp"
            android:paddingHorizontal="15dp"
            android:hint="Введите ваш рост в см"
            android:maxLength="3"

            android:inputType="numberDecimal"

            />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        app:counterEnabled="true"
        app:counterMaxLength="3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:errorEnabled="true">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/weightEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Введите ваш вес в кг"
            android:maxLength="3"
            android:layout_marginHorizontal="50dp"
            android:layout_marginVertical="10dp"
            android:paddingHorizontal="15dp"

            android:inputType="numberDecimal"

            />

    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_marginHorizontal="50dp"
        android:layout_height="wrap_content"
        android:text="Образ жизни"
        android:textColor="#000"
        />

    <androidx.cardview.widget.CardView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="50dp"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="10dp"
        android:padding="5dp"
        app:cardCornerRadius="7dp"
        app:cardUseCompatPadding="true"
        android:id="@+id/belowspinner"
        >
        <Spinner
            android:id="@+id/lifestyleSpinner"
            android:layout_width="300dp"
            android:layout_height="wrap_content"

            android:entries="@array/lifeStyle"

            />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        android:layout_marginHorizontal="50dp"
        app:cardUseCompatPadding="true">

        <Button
            android:id="@+id/applybtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:text="Применить"

            android:background="@drawable/button_background"
            android:textColor="@color/colorPrimaryDark"
            />

    </androidx.cardview.widget.CardView>





</LinearLayout>